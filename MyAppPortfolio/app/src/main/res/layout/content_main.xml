<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <TextView android:text="@string/main_title"
    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:gravity="center"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView" />

    <Button
        android:layout_width="@dimen/button_width_main"
        android:layout_height="wrap_content"
        android:background="@color/udacity_orange"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/button"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="@dimen/button_width_main"
        android:layout_height="wrap_content"
        android:background="@color/udacity_orange"
        android:text="SCORES APP"
        android:id="@+id/button2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4" />

    <Button
        android:layout_width="@dimen/button_width_main"
        android:layout_height="wrap_content"
        android:background="@color/udacity_orange"
        android:text="LIBRARY APP"
        android:layout_marginTop="10dp"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="@dimen/button_width_main"
        android:layout_height="wrap_content"
        android:background="@color/udacity_orange"
        android:text="BUILD IT BIGGER"
        android:layout_marginTop="10dp"
        android:id="@+id/button4"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="@dimen/button_width_main"
        android:layout_height="wrap_content"
        android:background="@color/udacity_orange"
        android:text="XYZ READER"
        android:layout_marginTop="10dp"
        android:id="@+id/button5"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="@dimen/button_width_main"
        android:layout_height="wrap_content"
        android:background="#D40037"
        android:textColor="#FFFFFF"
        android:text="CAPSTONE: MY OWN APP"
        android:layout_marginTop="10dp"
        android:id="@+id/button6"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
